<!DOCTYPE html>
<html lang="en">
<head>
    <title>Staff Dashboard - Game Shop</title>
    <%- include('../partials/header.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/staff.css" />
</head>
<body class="background d-flex flex-column min-vh-100">
    <%- include('../components/navbar.ejs') %>
    <%- include('../components/alertBlock.ejs') %>

    <% if (typeof user !== 'undefined' && user && user.role === 'staff') { %>
        <div class="container mt-5">
            <h1 class="mb-4">Staff Dashboard</h1>
            <div class="row">
                <div class="col-12 col-lg-3 sidebar mb-4">
                    <a href="/staff/games" class="btn btn-primary btn-lg d-block mb-3">Manage Games</a>
                    <a href="/staff/orders" class="btn btn-success btn-lg d-block mb-3">Manage Orders</a>
                </div>
                <div class="col-12 col-lg-9 dashboard-content">
                    <h2>Dashboard Summary</h2>
                    <iframe src="/public/html/gameDashboard.html" class="w-100" style="height: 500px; border: none;" title="Game Shop Dashboard"></iframe>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="container mt-5 text-center">
            <h3 class="text-danger">Access Denied</h3>
            <p>You must be a staff member to access this page.</p>
            <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
    <% } %>

    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<div class="container-fluid position-fixed" id="alertBlock" style="z-index: 1090;"></div>

<script defer>
    const alertBlock = document.querySelector('#alertBlock');

    const callAlert = (type, mess) => {
        const alert = alertCreation(type, mess);
        alertBlock.appendChild(alert);
        document.querySelectorAll('.js-alert').forEach(function ($el) {
            setTimeout(() => {
                $el.parentNode.removeChild($el)
            }, 2000);
        });
    }

    const alertCreation = (type, mess) => {
        const alertBox = document.createElement('div');
        alertBox.classList.add('alert', `alert-${type}`, 'alert-dismissible', 'fade', 'show', 'my-1', 'js-alert');
        alertBox.setAttribute('role', 'alert');
        const strongTag = document.createElement('strong');
        strongTag.textContent = `${type.toUpperCase()}: `;
        const message = document.createTextNode(mess);
        strongTag.appendChild(message);
        const closeButton = document.createElement('button');
        closeButton.classList.add('close');
        closeButton.setAttribute('type', 'button');
        closeButton.setAttribute('data-dismiss', 'alert');
        closeButton.setAttribute('aria-label', 'Close');
        const closeSymbol = document.createElement('span');
        closeSymbol.setAttribute('aria-hidden', 'true');
        closeSymbol.innerHTML = 'Ã—';
        closeButton.appendChild(closeSymbol);
        alertBox.appendChild(strongTag);
        alertBox.appendChild(closeButton);
        return alertBox;
    }
</script>